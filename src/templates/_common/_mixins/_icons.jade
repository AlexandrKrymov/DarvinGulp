//-
  Mixin to insert icons from the sprite
  @param {string} name - id of element
  @param {string|Array<string>} [mods] - additional classes
  @example
  +icon('mail', ['icon-20', 'icon-light'])

mixin iconSvg(name, mods)
  - mods = mods || ''
  svg(class="icon icon-svg icon-svg-" + name class=mods)
    use(xlink:href="assets/images/icons.svg#" + name)


mixin icon(name, mods)
  - mods = mods || ''
  span(class="icon icon-" + name class=mods) &nbsp;
